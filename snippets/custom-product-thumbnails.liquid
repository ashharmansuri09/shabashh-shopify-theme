
{% for image in product.media %}
        <div class="custom-slide custom-thumbnail-item">
          <img 
            src="{{ image | image_url: width: 80 }}" 
            srcset="
              {{ image | image_url: width: 360 }} 360w,
              {{ image | image_url: width: 720 }} 720w,
              {{ image | image_url: width: 1080 }} 1080w,
              {{ image | image_url: width: 1440 }} 1440w
            "
            alt="{{ image.alt }}" 
            width="80" 
            height="80"
          >
        </div>
{% endfor %}
  
