<div class="swiper mySwiper">
    <div class="swiper-wrapper">
      {% for image in product.media %}
        <div class="swiper-slide">
          <img src="{{ image | image_url: width: 80 }}" alt="{{ image.alt }}" width="80" height="80">
        </div>
      {% endfor %}
    </div>
  
  
  </div>
